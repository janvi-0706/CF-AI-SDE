# ==================== MONGODB CONFIGURATION ====================
MONGODB_URI=mongodb://localhost:27017/
MONGODB_DATABASE=trading_db
MONGODB_COLLECTION=market_data

# ==================== NEWS API ====================
# Get your API key from: https://newsapi.org/
NEWS_API_KEY=your_news_api_key_here
NEWS_API_URL=https://newsapi.org/v2/everything

# ==================== ECONOMIC CALENDAR API ====================
# Get your API key from: https://tradingeconomics.com/
ECONOMIC_CALENDAR_API_KEY=your_trading_economics_api_key_here
ECONOMIC_CALENDAR_API_URL=https://api.tradingeconomics.com/calendar

# ==================== LLM CONFIGURATION ====================
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# (Optional) Get Groq API key from: https://console.groq.com/
GROQ_API_KEY=your_groq_api_key_here

# (Optional) Huggingface API token from: https://huggingface.co/settings/tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here

# Set to 'true' to use lightweight models (Groq/HF) for simple tasks
USE_LIGHTWEIGHT_LLM=false

# ==================== RISK LIMITS ====================
# Value at Risk limit (0.05 = 5%)
VAR_LIMIT=0.05

# Maximum drawdown limit (0.10 = 10%)
DRAWDOWN_LIMIT=0.10
